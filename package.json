{
  "name": "nsmplugin",
  "displayName": "NSM Language Support",
  "description": "Syntax highlighting and language support for Natural Semantic Metalanguage (NSM)",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nsmplugin.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "nsm",
        "aliases": [
          "Natural Semantic Metalanguage",
          "NSM",
          "nsm"
        ],
        "extensions": [
          ".nsm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nsm",
        "scopeName": "source.nsm",
        "path": "./syntaxes/nsm.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/src/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.25",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "vscode-textmate": "^9.0.0"
  },
  "dependencies": {
    "onigasm": "^2.2.5"
  }
}
