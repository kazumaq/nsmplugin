{
  "name": "nsmplugin",
  "displayName": "NSM Language Support",
  "description": "Syntax highlighting and language support for Natural Semantic Metalanguage (NSM)",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/kazumaq/nsmplugin.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kazumaq/nsmplugin/issues"
  },
  "homepage": "https://github.com/kazumaq/nsmplugin#readme",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nsmplugin.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "nsm",
        "aliases": [
          "Natural Semantic Metalanguage",
          "NSM",
          "nsm"
        ],
        "extensions": [
          ".nsm"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        }
      }
    },
    "grammars": [
      {
        "language": "nsm",
        "scopeName": "source.nsm",
        "path": "./syntaxes/nsm.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.25",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "vscode-textmate": "^9.0.0"
  },
  "dependencies": {
    "onigasm": "^2.2.5"
  },
  "private": true,
  "workspaces": [
    "nsmplugin-server",
    "nsmplugin-client"
  ]
}
